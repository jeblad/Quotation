{
	"name": "citation/citation",
	"type": "mediawiki-extension",
	"description": "Provides basic functionality to do testing of quoted text in Mediawiki.",
	"keywords": [
		"wiki",
		"MediaWiki",
		"extension",
		"quotes",
		"Citation"
	],
	"homepage": "https://www.mediawiki.org/wiki/Extension:Citation",
	"license": "GPL-2.0",
	"authors": [
		{
			"name": "John Erling Blad",
			"email": "jeblad@gmail.com",
			"homepage": "https://github.com/jeblad",
			"role": "Developer"
		}
	],
	"support": {
		"wiki": "https://www.mediawiki.org/wiki/Extension:Citation",
		"forum": "https://www.mediawiki.org/wiki/Extension_talk:Citation",
		"source": "https://github.com/jeblad/citation",
		"issues": "https://github.com/jeblad/citation/issues",
		"irc": "irc://irc.freenode.net/mediawiki"
	},
	"config": {
		"prepend-autoloader": false,
		"optimize-autoloader": true
	},
	"require-dev": {
		"phpunit/phpunit": "*",
		"jakub-onderka/php-parallel-lint": ">=0.9.2",
		"mediawiki/mediawiki-codesniffer": ">=0.7.2",
		"liuggio/fastest": "~1.4"
	},
	"scripts": {
		"fix": [
			"phpcbf"
		],
		"minify": [
			"find modules/images -type d -path minified  -prune -o -type d -execdir svgo --pretty --indent=2 -i . -o ./minified \\;"
		],
		"test": [
			"parallel-lint . --exclude vendor",
			"phpcs -p -s"
		]
	},
	"require": {
		"php": ">=5.6",
		"composer/installers": "~1.0"
	},
	"suggest": {
		"ext-apc": "Local data and opcode cache"
	}
}
